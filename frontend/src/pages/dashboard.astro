---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ClientDashboard from "@/islands/ClientDashboard";
const { userId } = Astro.locals.auth();

if(!userId) {
  return Astro.redirect('/');
}
---


<BaseLayout
  title="User Dashboard | Use AI to generate tasks | Create & Manage your tasks"
  description="User dashbaord, create tasklist, edit tasklist, manage your tasks. Use AI to generate your tasks and manage your life."
>
  <div class="p-10 bg-violet-50">
    <header class="mb-5">
      <h3 class="text-2xl">Dashboard</h3>
      <p class="text-gray-700 text-md">
        Generate and manage your AI-powered tasks
      </p>
    </header>

    <section class="">
      <ClientDashboard client:idle />
    </section>

    <!-- <section>
      <TaskList client:only="react" />
    </section> -->
  </div>
</BaseLayout>
