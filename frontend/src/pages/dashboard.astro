---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ClientList from "@/islands/ClientList";
import AITextArea from "@/components/dashboard/AITextArea";
import TaskList from "@/components/dashboard/TaskList";
---

<BaseLayout>
  <div class="p-10 bg-violet-50">
    <header class="mb-5">
        <h3 class="text-2xl">Dashboard</h3>
        <p class="text-gray-700 text-md">Generate and manage your AI-powered tasks</p>
    </header>

    <section class="mb-3">
      <AITextArea client:load />
    </section>
    <section class="mb-3">
      <ClientList client:only="react" />
    </section>

    <!-- <section>
      <TaskList client:only="react" />
    </section> -->
  </div>
</BaseLayout>
